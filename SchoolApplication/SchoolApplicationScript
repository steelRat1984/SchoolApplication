-- Table: school_application.courses
-- DROP TABLE IF EXISTS school_application.courses;
CREATE TABLE IF NOT EXISTS school_application.courses
(
    course_id integer NOT NULL,
    course_name character(250) COLLATE pg_catalog."default",
    course_description character(2000) COLLATE pg_catalog."default"
)
TABLESPACE pg_default;
ALTER TABLE IF EXISTS school_application.courses
    OWNER to postgres;
    
    
-- Table: school_application.groups
-- DROP TABLE IF EXISTS school_application.groups;
CREATE TABLE IF NOT EXISTS school_application.groups
(
    group_id integer NOT NULL,
    group_name character(100) COLLATE pg_catalog."default" NOT NULL
)
TABLESPACE pg_default;
ALTER TABLE IF EXISTS school_application.groups
    OWNER to postgres;
    
    
    -- Table: school_application.students
-- DROP TABLE IF EXISTS school_application.students;
CREATE TABLE IF NOT EXISTS school_application.students
(
    student_id integer NOT NULL,
    group_id integer NOT NULL,
    first_name character(250) COLLATE pg_catalog."default",
    last_name character(250) COLLATE pg_catalog."default"
)
TABLESPACE pg_default;
ALTER TABLE IF EXISTS school_application.students
    OWNER to postgres;